mixin expedition__event(imgsrc, name, date)
	a.expedition__event(href="")
		.expedition__event-img(style='background-image:url(./img/' + imgsrc +')')
		.expedition__event-desc
			.expedition__event-name= name
			.expedition__event-date= date

